---
interface Props {
  items: Array<{
    text: string;
    url: string;
  }>;
}

const { items } = Astro.props;
---

<ul class="arrow-list">
  {items.map(item => (
    <li>
      <a href={item.url}>{item.text}</a>
    </li>
  ))}
</ul>

<style>
.arrow-list {
  list-style: none;
  padding-left: 0;
  margin: 1rem 0;
}

.arrow-list li {
  display: flex;
  align-items: center;
  margin-bottom: 0.75rem;
  padding: 0.5rem;
  border-radius: 0.375rem;
  transition: background-color 0.2s ease;
}

.arrow-list li:hover {
  background-color: #F9FAFB;
}

.arrow-list li::before {
  content: "â†’";
  color: #3B82F6;
  font-size: 1.25rem;
  font-weight: bold;
  margin-right: 0.75rem;
  transition: transform 0.2s ease;
}

.arrow-list li:hover::before {
  transform: translateX(4px);
}

.arrow-list a {
  text-decoration: none;
  color: #1F2937;
  font-weight: 500;
  transition: color 0.2s ease;
}

.arrow-list a:hover {
  color: #3B82F6;
}
</style>